SELECT reads, hits, reuses
FROM pg_stat_io
WHERE context = 'bulkread' -- —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –±–æ–ª—å—à–∏—Ö —Ç–∞–±–ª–∏—Ü
AND object = 'relation'
AND backend_type = 'client backend';
